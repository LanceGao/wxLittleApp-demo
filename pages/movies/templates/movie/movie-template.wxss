/* pages/movies/templates/movie/movie-template.wxss */
@import "../stars/stars-template.wxss";

.movie-container {
  display: flex;
  flex-direction: column;
  padding: 0 22rpx;
}

.movie-img {
  width: 200rpx;
  height: 270rpx;
}

.movie-name {
  font-size: 32rpx;
  color: #707070;
  margin-bottom: 16rpx;
  margin-top: 20rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
