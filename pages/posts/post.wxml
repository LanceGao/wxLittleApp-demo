<import src="post-item/post-item-template.wxml" />

<view>
  <swiper indicator-dots="true" 
  autoplay="true"
  interval="5000">
    <swiper-item>
      <image src="/images/iqiyi.png"></image>
    </swiper-item>
    <swiper-item>
      <image src="/images/vr.png"></image></swiper-item>
    <swiper-item>
      <image src="/images/wx.png"></image></swiper-item>
    </swiper>
</view>
<block wx:for="{{post_content}}" wx:key="{{item.title}}">
  <view data-post-name="name" data-postId="{{item.postId}}" catchtap="goPostDetail">
    <template data="{{item}}" is="postItem" />
  </view>
</block>