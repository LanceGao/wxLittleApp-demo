
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
}

page {
  height: 100%;
  background: #b3d4db;
}

.user-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 100rpx;
  border: 1px solid #000;
  margin-top: 160rpx;
}

.user-name {
  font-size: 32rpx;
  font-weight: bold;
  margin-top: 100rpx;
}

.moto-container {
  width: 250rpx;
  height: 80rpx;
  border: 1px solid #ccc;
  border-radius: 5px;
  text-align: center;
  margin-top: 200rpx;
  border: 1px solid  #405f80;
}

.moto {
  font-size: 22rpx;
  font-weight: bold;
  line-height: 80rpx;
  color: #405f80;
}